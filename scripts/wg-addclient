set -euo pipefail

# Script-Logging
log() {
    echo "[$(date +'%Y-%m-%d %H:%M:%S')] $*"
}

error() {
    log "ERROR: $*" >&2
    exit 1
}

# Hauptfunktion
main() {
    local CLIENT_NAME="$1"
    local CLIENT_IPV4="$2"
    local CLIENT_IPV6="$3"
    local WG_CONF="/etc/wireguard/wg0.conf"

    # Validierung
    if [ -z "$CLIENT_NAME" ]  [ -z "$CLIENT_IPV4" ]  [ -z "$CLIENT_IPV6" ]; then
        error "Alle Parameter benÃ¶tigt (Name, IPv4, IPv6)"
    fi

    log "Erstelle Client: $CLIENT_NAME"
    
    # Keys generieren
    local PRIVATE_KEY=$(wg genkey)
    local PUBLIC_KEY=$(echo "$PRIVATE_KEY" | wg pubkey)

    # Client-Konfig erstellen
    local CLIENT_CONF="[Interface]
PrivateKey = $PRIVATE_KEY
Address = $CLIENT_IPV4, $CLIENT_IPV6
DNS = 8.8.8.8, 2001:4860:4860::8888

[Peer]
PublicKey = DEIN_SERVER_PUBLIC_KEY_HIER
Endpoint = 85.214.163.145:51820
AllowedIPs = 0.0.0.0/0, ::/0"

    # Client-Konfig speichern
    local CLIENT_DIR="/etc/wireguard/clients"
    mkdir -p "$CLIENT_DIR"
    echo "$CLIENT_CONF" > "$CLIENT_DIR/${CLIENT_NAME}.conf"
    
    log "Client-Konfig gespeichert: $CLIENT_DIR/${CLIENT_NAME}.conf"

    # wg0.conf erweitern
    echo "" >> "$WG_CONF"
    echo "[Peer]" >> "$WG_CONF"
    echo "# $CLIENT_NAME" >> "$WG_CONF"
    echo "PublicKey = $PUBLIC_KEY" >> "$WG_CONF"
    echo "AllowedIPs = $CLIENT_IPV4, $CLIENT_IPV6" >> "$WG_CONF"

    # WireGuard neu starten
    wg-quick down wg0
    wg-quick up wg0

    log "âœ… Client $CLIENT_NAME erfolgreich erstellt"
    echo "ðŸ”‘ Public Key: $PUBLIC_KEY"
}

# Hauptprogramm
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    main "$@"
fi